{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "CHANGELOG Format Check",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint:changelog:format"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": [
        {
          "owner": "changelog-format",
          "fileLocation": "relative",
          "pattern": {
            "regexp": "^\\s*Line (\\d+): (.*)$",
            "file": 1,
            "line": 1,
            "message": 2
          }
        }
      ]
    },
    {
      "label": "CHANGELOG Markdown Lint",
      "type": "shell",
      "command": "npm",
      "args": ["run", "lint:changelog:md"],
      "group": "test",
      "presentation": {
        "echo": true,
        "reveal": "always",
        "focus": false,
        "panel": "shared",
        "showReuseMessage": true,
        "clear": false
      },
      "problemMatcher": []
    }
  ]
}
